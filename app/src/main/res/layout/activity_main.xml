<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:orientation="vertical">

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:gravity="center"
    android:id="@+id/etDOB" android:hint="Enter your birth year"/>
    <Button
            android:text="Get My age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/btnGetAge" tools:text="Get my age"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Your age shows here"
            android:id="@+id/tvShowAge"/>

</LinearLayout>